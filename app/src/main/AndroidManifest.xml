<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitbill.www">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".app.BitbillApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.guide.GuideActivity"
            android:label="@string/title_activity_guide"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.wallet.init.InitWalletActivity" />
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".ui.wallet.importing.ImportWalletActivity"
            android:label="@string/title_activity_import_wallet"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.wallet.init.InitWalletSuccessActivity"
            android:label="@string/title_activity_create_wallet"
            android:theme="@style/AppTheme.PopupBottom" />
        <activity
            android:name=".ui.wallet.backup.BackUpWalletActivity"
            android:label="@string/title_activity_backup_wallet" />
        <activity
            android:name=".ui.wallet.backup.BackupWalletConfirmActivity"
            android:label="@string/title_activity_backup_wallet" />
        <activity
            android:name=".ui.wallet.backup.BackupWalletSuccessActivity"
            android:label="@string/title_activity_backup_wallet"
            android:theme="@style/AppTheme.PopupBottom" />
        <activity
            android:name=".ui.wallet.info.WalletInfoActivity"
            android:label="@string/title_activity_wallet_info"
            android:theme="@style/AppTheme.Blue" />
        <activity
            android:name=".ui.main.receive.SpecificReceiveActivity"
            android:label="@string/title_activity_specific_receive"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name=".ui.main.send.SendSuccessActivity"
            android:label="@string/title_activity_send_success"
            android:theme="@style/AppTheme.PopupBottom" />
        <activity
            android:name=".ui.wallet.init.CreateWalletIdActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.wallet.init.ResetPwdActivity"
            android:label="@string/title_activity_reset_pwd"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.main.send.SendConfirmActivity"
            android:label="@string/title_activity_send_confirm"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.main.send.SelectWalletActivity"
            android:label="@string/title_activity_select_wallet" />
        <activity
            android:name=".ui.main.send.SendAmountActivity"
            android:label="@string/title_activity_send_amount"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize" />
        <activity
            android:name=".ui.main.receive.ScanPayActivity"
            android:label="@string/title_activity_scan_pay"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.main.send.ScanQrcodeActivity"
            android:label="@string/title_activity_scan_qrcode"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.main.contact.ContactDetailActivity"
            android:label="@string/title_activity_contact_detail"
            android:theme="@style/AppTheme.Blue" />
        <activity
            android:name=".ui.main.contact.AddContactByIdActivity"
            android:label="@string/title_activity_add_contact_by_id"
            android:theme="@style/AppTheme.Blue"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <activity
            android:name=".ui.main.contact.SearchContactResultActivity"
            android:theme="@style/AppTheme.Blue" />
        <activity
            android:name=".ui.main.contact.AddContactByAddressActivity"
            android:label="@string/title_activity_add_contact_by_address"
            android:theme="@style/AppTheme.Blue"></activity>
        <activity
            android:name=".ui.main.my.WalletSettingActivity"
            android:label="@string/title_activity_wallet_setting"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>