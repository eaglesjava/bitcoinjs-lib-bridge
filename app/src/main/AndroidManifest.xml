<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bitbill.www">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".app.BitbillApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/AppTheme.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.guide.GuideActivity"
            android:label="@string/title_activity_guide"
            android:theme="@style/AppTheme.Transparent">
        </activity>
        <activity android:name=".ui.wallet.init.InitWalletActivity">
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.wallet.importing.ImportWalletActivity"
            android:label="@string/title_activity_import_wallet"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.wallet.init.InitWalletSuccessActivity"
            android:label="@string/title_activity_create_wallet">
        </activity>
        <activity
            android:name=".ui.wallet.backup.BackUpWalletActivity"
            android:label="@string/title_activity_backup_wallet">
        </activity>
        <activity
            android:name=".ui.wallet.backup.BackupWalletConfirmActivity"
            android:label="@string/title_activity_backup_wallet">
        </activity>
        <activity
            android:name=".ui.wallet.backup.BackupWalletSuccessActivity"
            android:label="@string/title_activity_backup_wallet">
        </activity>
    </application>

</manifest>