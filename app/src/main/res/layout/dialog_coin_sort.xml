<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            style="@style/Text.Title"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="自定义币种" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:name="com.bitbill.www.common.base.view.dialog.CoinSortDialog"
            style="@style/RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_blue_corner_min"
            app:layoutManager="LinearLayoutManager"
            tools:context=".common.widget.dialog.CoinSortDialog"
            tools:listitem="@layout/item_dialog_coin_sort" />
    </LinearLayout>
</FrameLayout>