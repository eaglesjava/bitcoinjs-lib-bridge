<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_wallet_label"
        style="@style/Text.Wallet.Logo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wallet_name"
            style="@style/Text.Wallet.Name"
            android:lines="1" />

        <TextView
            android:id="@+id/tv_wallet_amount"
            style="@style/Text.Wallet.Amount"
            android:layout_marginTop="1dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_backup_now"
        style="@style/Button"
        android:layout_gravity="center_vertical"
        android:background="@color/transparent"
        android:text="@string/btn_backup_now"
        android:visibility="visible" />
</merge>