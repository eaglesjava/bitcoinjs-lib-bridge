<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context="com.bitbill.www.ui.wallet.init.ResetPwdActivity">

    <ScrollView
        android:id="@+id/wallet_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/init_wallet_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.bitbill.www.common.widget.EditTextWapper
                android:id="@+id/etw_trade_pwd_before"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:inputHint="@string/hint_trade_pwd"
                app:inputPaddingBottom="10dp"
                app:inputTitle="@string/input_trade_pwd_before"
                app:inputType="inputPasswordHide"
                />

            <com.bitbill.www.common.widget.EditTextWapper
                android:id="@+id/etw_trade_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:inputHint="@string/hint_trade_pwd"
                app:inputPaddingBottom="10dp"
                app:inputPwdStatusVisible="true"
                app:inputTitle="@string/input_trade_pwd"
                app:inputType="inputPasswordHide"
                />

            <com.bitbill.www.common.widget.EditTextWapper
                android:id="@+id/etw_trade_pwd_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:inputHint="@string/hint_input_please"
                app:inputPaddingBottom="10dp"
                app:inputTitle="@string/input_trade_pwd_confirm"
                app:inputType="inputPasswordHide"
                />

            <TextView
                style="@style/Text.Small.Green"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:text="@string/hint_back_up_pwd"/>

            <Button
                android:id="@+id/btn_reset_pwd"
                style="@style/Button.Blue"
                android:layout_marginTop="30dp"
                android:text="@string/btn_reset_pwd"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
