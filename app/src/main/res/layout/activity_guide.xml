<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/main_content"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/dark_bg"
             android:fitsSystemWindows="true"
             tools:context="com.bitbill.www.ui.guide.GuideActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_125"
        android:layout_gravity="center"
        android:src="@drawable/ic_guide_phone"/>

    <ImageView
        android:id="@+id/phone_center"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_52"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_7"
        android:src="@drawable/ic_guide_phone_center"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">

        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:piv_count="3"
            app:piv_radius="@dimen/dp_3"
            app:piv_viewPager="@+id/viewPager"/>

        <Button
            android:id="@+id/btn_create_wallet"
            style="@style/Button.Blue"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_35"
            android:text="@string/btn_create_wallet"/>

        <Button
            android:id="@+id/btn_import_wallet"
            style="@style/Button.Transparent"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/btn_import_wallet"/>

    </LinearLayout>
</FrameLayout>
