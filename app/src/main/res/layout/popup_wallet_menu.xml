<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_menu_create_wallet"
        style="@style/Text.Wallet.Menu"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_menu_create"
        android:text="创建钱包"/>

    <TextView
        android:id="@+id/tv_menu_import_wallet"
        style="@style/Text.Wallet.Menu"
        android:layout_marginTop="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_menu_import"
        android:text="导入钱包"/>
</LinearLayout>