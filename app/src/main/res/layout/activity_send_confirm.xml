<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.bitbill.www.ui.main.send.SendConfirmActivity">

            <TextView
                style="@style/Text.Title.Confirm"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/title_content_receiver_address" />

            <TextView
                android:id="@+id/tv_send_address"
                style="@style/Text.Address"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="16sp" />

            <TextView
                style="@style/Text.Title.Confirm"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/title_content_send_amount" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/et_send_amount"
                    style="@style/Text.White"
                    android:text="0.00"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    style="@style/Text.White"
                    android:text=" BTC"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <TextView
                style="@style/Text.White.Action"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_40"
                android:text="@string/title_content_fees" />

            <SeekBar
                android:id="@+id/sb_send_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:progress="50"
                android:progressTint="@color/blue" />

            <TextView
                android:id="@+id/tv_fee_hint"
                style="@style/Text.Small.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_15"
                android:text="@string/hint_confirm_time_and_fees" />


            <TextView
                style="@style/Text.Title.Confirm"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/title_content_send_wallet" />

            <TextView
                android:id="@+id/tv_send_contact"
                style="@style/Text.White"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_16" />

            <TextView
                style="@style/Text.Title.Confirm"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_30"
                android:text="@string/title_content_send_remark" />

            <EditText
                android:id="@+id/et_send_mark"
                style="@style/EditText.Normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_10"
                android:hint="@string/hint_remark_20_character"
                android:maxLength="20" />

            <Button
                android:id="@+id/btn_next"
                style="@style/Button.Blue"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_48"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_48"
                android:text="@string/btn_confirm_send" />
        </LinearLayout>

    </ScrollView>

</FrameLayout>
