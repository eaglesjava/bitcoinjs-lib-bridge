<com.bitbill.www.common.widget.CustomSwipeToRefresh xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:context="com.bitbill.www.ui.main.asset.AssetFragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_short_cut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Text.Title.Content"
                    android:layout_marginLeft="@dimen/activity_padding"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="@string/text_go_to_setting_custom" />

                <TextView
                    style="@style/Text.Title"
                    android:layout_below="@id/tv_coin_count"
                    android:layout_marginLeft="@dimen/activity_padding"
                    android:layout_marginRight="@dimen/activity_padding"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/title_shortcut" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_short_cut_scan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:src="@drawable/ic_short_cut_scan" />

                        <TextView
                            style="@style/Text.Small"
                            android:text="@string/text_short_cut_scan" />
                    </LinearLayout>

                    <View
                        style="@style/Line.Vertical"
                        android:background="@color/white_30" />

                    <LinearLayout
                        android:id="@+id/ll_short_cut_contact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:src="@drawable/ic_short_cut_contact" />

                        <TextView
                            style="@style/Text.Small"
                            android:text="@string/text_short_cut_contact" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_coin_count"
                    style="@style/Text.Title.Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_padding"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="@string/text_current_currency_type" />

                <TextView
                    android:id="@+id/tv_total_asset"
                    style="@style/Text.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_coin_count"
                    android:layout_marginLeft="@dimen/activity_padding"
                    android:layout_marginRight="@dimen/activity_padding"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/title_total_assets" />

                <FrameLayout
                    android:layout_width="@dimen/dp_25"
                    android:layout_height="@dimen/dp_25"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_total_asset"
                    android:layout_marginRight="@dimen/activity_padding">

                    <RadioButton
                        android:id="@+id/rb_socket_status"
                        android:layout_width="@dimen/dp_6"
                        android:layout_height="@dimen/dp_6"
                        android:layout_gravity="center"
                        android:background="@drawable/socket_status_green_corner"
                        android:button="@color/transparent" />
                </FrameLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Image.Asset"
                        android:src="@drawable/ic_asset_btc" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text.Crypto"
                            android:text="@string/text_asset_btc" />

                        <TextView
                            android:id="@+id/tv_btc_amount"
                            style="@style/Text.Asset"
                            android:text="@string/text_default_amount" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Image.Asset"
                        android:src="@drawable/ic_asset_bch" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text.Crypto"
                            android:text="@string/text_asset_bch"
                            android:textColor="@color/white_30" />

                        <TextView
                            style="@style/Text.Asset"
                            android:text="@string/text_default_amount"
                            android:textColor="@color/white_30" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/Image.Asset"
                        android:src="@drawable/ic_asset_eth" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Text.Crypto"
                            android:text="@string/text_asset_eth"
                            android:textColor="@color/white_30" />

                        <TextView
                            style="@style/Text.Asset"
                            android:text="@string/text_default_amount"
                            android:textColor="@color/white_30" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/fl_btc_unconfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:layout_marginTop="@dimen/dp_40"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_current_wallet_count"
                    style="@style/Text.Title.Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Text.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/title_asset_my_wallet" />

                    <ImageView
                        android:id="@+id/iv_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_25"
                        android:padding="@dimen/dp_5"
                        android:src="@drawable/ic_asset_plus" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_wallet_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_padding"
                android:layout_marginLeft="@dimen/activity_padding"
                android:layout_marginRight="@dimen/activity_padding"
                android:orientation="vertical">

            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</com.bitbill.www.common.widget.CustomSwipeToRefresh>