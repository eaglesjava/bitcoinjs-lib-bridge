<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_address"
        style="@style/Text.Address"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_marginRight="@dimen/activity_padding"
        android:layout_marginTop="10dp"
        android:text="1He7s5V6CNEQRJMVAVdWfHCoJFM5CwrvPP"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_receive_qrcode"/>

    <TextView
        android:id="@+id/tv_receive_amount"
        style="@style/Text.White"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/text_receive_specific_amount"
        android:textSize="15sp"/>


</LinearLayout>

