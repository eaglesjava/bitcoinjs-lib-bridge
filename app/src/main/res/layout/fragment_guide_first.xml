<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_guide_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/guide_label"
        style="@style/Title.Guide"
        android:text="@string/guide_section_one"/>

    <RelativeLayout
        android:id="@+id/guide_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/wallet"
            style="@style/GuideWallet" />

        <ImageView
            android:id="@+id/guide_item_xrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_9"
            android:layout_toStartOf="@+id/wallet"
            android:src="@drawable/ic_guide_xrp"/>

        <ImageView
            android:id="@+id/guide_item_btc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/guide_item_xrp"
            android:layout_alignEnd="@+id/guide_item_xrp"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_28"
            android:src="@drawable/ic_guide_btc"/>

        <ImageView
            android:id="@+id/guide_item_ltc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/guide_item_btc"
            android:layout_marginBottom="@dimen/dp_m_10"
            android:layout_toEndOf="@+id/guide_item_btc"
            android:src="@drawable/ic_guide_ltc"/>

        <ImageView
            android:id="@+id/guide_item_eth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/guide_item_eos"
            android:layout_alignEnd="@+id/guide_item_neo"
            android:layout_marginEnd="@dimen/dp_25"
            android:src="@drawable/ic_guide_eth"/>


        <ImageView
            android:id="@+id/guide_item_eos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/guide_item_xrp"
            android:layout_alignStart="@+id/guide_item_neo"
            android:layout_marginStart="@dimen/dp_31"
            android:src="@drawable/ic_guide_eos"/>

        <ImageView
            android:id="@+id/guide_item_neo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/wallet"
            android:layout_marginBottom="@dimen/dp_13"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_toEndOf="@+id/wallet"
            android:src="@drawable/ic_guide_dcr" />
    </RelativeLayout>

</FrameLayout>
