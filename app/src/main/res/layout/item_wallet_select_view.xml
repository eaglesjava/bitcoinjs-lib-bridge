<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_wallet_select_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_20"
    android:paddingTop="@dimen/dp_20">

    <TextView
        android:id="@+id/tv_wallet_label"
        style="@style/Text.Wallet.Logo"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center_vertical"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wallet_name"
            style="@style/Text.Wallet.Name"
            android:lines="1" />

        <TextView
            android:id="@+id/tv_wallet_amount"
            style="@style/Text.Wallet.Amount"
            android:layout_marginTop="@dimen/dp_1" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/rb_selector"
        style="@style/CheckButton"
        android:layout_gravity="center_vertical" />

</LinearLayout>