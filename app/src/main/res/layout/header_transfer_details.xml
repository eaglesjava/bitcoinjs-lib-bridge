<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.bitbill.www.ui.wallet.info.transfer.TransferDetailsActivity">

    <ImageView
        android:id="@+id/iv_transfer_status"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_transfer_unconfirm" />

    <TextView
        android:id="@+id/tv_transfer_status"
        style="@style/Content.Title.White80"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/status_transfer_unconfirm" />

    <TextView
        android:id="@+id/tv_transfer_amount"
        style="@style/Text.White"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_33"
        android:textAllCaps="true"
        android:textSize="@dimen/sp_40" />


</LinearLayout>
