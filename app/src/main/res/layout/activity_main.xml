<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitbill.www.ui.main.MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:text="我的资产"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"/>

    <com.isanwenyu.tabview.TabGroup
        android:id="@+id/tg_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="5dp"
        app:checkedTab="@+id/tab_asset">

        <com.isanwenyu.tabview.TabView
            android:id="@id/tab_asset"
            style="@style/TabView"
            app:badge_none_show="false"
            app:imgDimension="20dp"
            app:imgDrawable="@drawable/ic_asset_selector"
            app:rv_color="@color/colorAccent"
            app:tabRippleEnable="false"
            app:textColor="@color/tab_text_color"
            app:textSize="10sp"
            app:textString="@string/title_asset"/>

        <com.isanwenyu.tabview.TabView
            android:id="@+id/tab_receive"
            style="@style/TabView"
            app:badge_none_show="false"
            app:imgDimension="20dp"
            app:imgDrawable="@drawable/ic_receive_selector"
            app:rv_color="@color/colorAccent"
            app:tabRippleEnable="false"
            app:textColor="@color/tab_text_color"
            app:textSize="10sp"
            app:textString="@string/title_receive"/>

        <com.isanwenyu.tabview.TabView
            android:id="@+id/tab_send"
            style="@style/TabView"
            app:badge_none_show="false"
            app:imgDimension="20dp"
            app:imgDrawable="@drawable/ic_send_selector"
            app:rv_color="@color/colorAccent"
            app:tabRippleEnable="false"
            app:textColor="@color/tab_text_color"
            app:textSize="10sp"
            app:textString="@string/title_send"/>

        <com.isanwenyu.tabview.TabView
            android:id="@+id/tab_my"
            style="@style/TabView"
            app:badge_none_show="false"
            app:imgDimension="20dp"
            app:imgDrawable="@drawable/ic_my_selector"
            app:rv_color="@color/colorAccent"
            app:tabRippleEnable="false"
            app:textColor="@color/tab_text_color"
            app:textSize="10sp"
            app:textString="@string/title_my"/>
    </com.isanwenyu.tabview.TabGroup>

</FrameLayout>
