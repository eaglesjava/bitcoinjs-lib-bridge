<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    tools:context="com.bitbill.www.ui.wallet.backup.BackUpWalletActivity">

    <TextView
        style="@style/Text.White"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_33"
        android:text="@string/hint_bak_wallet_environment_safe"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/ic_wallet_ban_screenshot"/>

        <TextView
            style="@style/Text.White"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/hint_bak_wallet_ban_screenshots"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_input_mnemonic"
        style="@style/EditText.Mnemonic.Noneditable"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_25" />

    <Button
        android:id="@+id/btn_wirtten_mnemonic"
        style="@style/Button.Blue"
        android:layout_width="match_parent"
        android:text="@string/btn_written_mnemonic_in_order"/>
</LinearLayout>
