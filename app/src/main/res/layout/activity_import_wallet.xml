<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    tools:context="com.bitbill.www.ui.wallet.importing.ImportWalletActivity">


    <TextView
        style="@style/Text.InputTitle"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/text_mnemonic" />

    <EditText
        android:id="@+id/et_input_mnemonic"
        style="@style/EditText.Mnemonic"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:hint="@string/hint_input_mnemonic" />

    <TextView
        style="@style/Text.Small.Green"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_25"
        android:text="@string/hint_only_support_bip39" />

    <Button
        android:id="@+id/btn_next"
        style="@style/Button.Blue"
        android:layout_width="match_parent"
        android:text="@string/btn_next" />
</LinearLayout>