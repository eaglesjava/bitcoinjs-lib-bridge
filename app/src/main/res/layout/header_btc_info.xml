<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginRight="@dimen/activity_padding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_padding">

        <TextView
            android:id="@+id/tv_amount"
            style="@style/Text.Wallet.Amount.Big"
            android:paddingRight="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_amount_label"
            style="@style/Text.Crypto"
            android:text="btc"
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_btc_value"
        style="@style/Text"
        android:paddingLeft="@dimen/activity_padding"
        android:paddingRight="@dimen/activity_padding"
        android:text="@string/text_btc_cny_value"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_btc_unconfirm"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_padding"
        android:layout_marginRight="@dimen/activity_padding"
        android:layout_marginTop="@dimen/activity_padding"
        android:background="@drawable/bg_white_30_corner"
        android:gravity="center"
        android:padding="@dimen/dp_20"
        android:text="@string/text_btc_unconfirm"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        android:visibility="gone" />

    <TextView
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/activity_padding"
        android:background="@color/white_10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_padding"
        android:text="交易记录"
        android:textColor="@color/white_60"
        android:textSize="@dimen/sp_12" />

</LinearLayout>