<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitbill.www.ui.main.contact.ContactActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        style="@style/RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_padding"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/item_contact_view">

    </android.support.v7.widget.RecyclerView>

    <com.mcxtzhang.indexlib.IndexBar.widget.IndexBar
        android:id="@+id/indexBar"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        app:indexBarPressBackground="@color/white_10"
        app:indexBarTextSize="16sp" />

    <TextView
        android:id="@+id/tvSideBarHint"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/white_60"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:visibility="gone" />


</FrameLayout>
