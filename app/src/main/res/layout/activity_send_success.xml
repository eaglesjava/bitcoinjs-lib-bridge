<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.bitbill.www.ui.main.send.SendSuccessActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:src="@drawable/ic_wallet_create_success"/>

    <TextView
        android:id="@+id/tv_hint_title"
        style="@style/Text.Title.Small"
        android:layout_marginTop="20dp"
        android:text="@string/title_activity_send_success"
        android:textColor="@color/green"/>


    <TextView
        android:id="@+id/tv_send_address"

        style="@style/Text.Address"
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:text="1PN9ET1..sRaqfPN"
        android:textColor="@color/white_60"/>

    <TextView
        android:id="@+id/et_send_amount"
        style="@style/Text.White"
        android:layout_marginTop="5dp"
        android:text="0.221 BTC"
        android:textSize="26sp"/>

    <TextView
        android:id="@+id/tv_hint_content"
        style="@style/Text.White"
        android:layout_marginTop="50dp"
        android:text="@string/hint_send_success"/>

    <Button
        android:id="@+id/btn_create_contact"
        style="@style/Button.Blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:text="@string/btn_create_contact_now"/>

</LinearLayout>