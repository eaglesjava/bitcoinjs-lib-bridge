<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_padding"
    android:paddingRight="@dimen/activity_padding">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Content.Title.White80"
                android:layout_marginTop="10dp"
                android:text="@string/text_wallet_id" />

            <TextView
                android:id="@+id/tv_wallet_id"
                style="@style/Content"
                android:layout_marginBottom="10dp"
                android:lines="1"
                android:singleLine="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_scan_address"
            style="@style/Text.Blue"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_white_corner"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="@string/btn_scan_address" />
    </RelativeLayout>

    <TextView
        style="@style/Content.Title.White80"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/title_address_balance" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.bitbill.www.ui.main.my.WalletAddressFragment"
        style="@style/RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        tools:context="com.bitbill.www.ui.main.my.WalletAddressFragment"
        tools:listitem="@layout/item_wallet_address" />

</LinearLayout>