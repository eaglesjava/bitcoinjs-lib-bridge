<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitbill.www.ui.main.send.ScanQrcodeActivity">

    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/zxingview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="1000"
        app:qrcv_barcodeRectHeight="@dimen/dp_120"
        app:qrcv_borderColor="@android:color/white"
        app:qrcv_borderSize="0dp"
        app:qrcv_cornerColor="@color/white"
        app:qrcv_cornerLength="@dimen/dp_10"
        app:qrcv_cornerSize="@dimen/dp_2"
        app:qrcv_customScanLineDrawable="@drawable/scan_icon_scanline"
        app:qrcv_isBarcode="false"
        app:qrcv_isCenterVertical="false"
        app:qrcv_isOnlyDecodeScanBoxArea="false"
        app:qrcv_isScanLineReverse="true"
        app:qrcv_isShowDefaultGridScanLineDrawable="false"
        app:qrcv_isShowDefaultScanLineDrawable="true"
        app:qrcv_isShowTipBackground="false"
        app:qrcv_isShowTipTextAsSingleLine="false"
        app:qrcv_isTipTextBelowRect="true"
        app:qrcv_maskColor="@color/black_50"
        app:qrcv_qrCodeTipText="@string/tip_qrcode_scan"
        app:qrcv_rectWidth="@dimen/dp_200"
        app:qrcv_scanLineColor="@color/white"
        app:qrcv_scanLineMargin="0dp"
        app:qrcv_scanLineSize="@dimen/dp_0_5"
        app:qrcv_tipTextColor="@android:color/white"
        app:qrcv_tipTextSize="@dimen/sp_12"
        app:qrcv_toolbarHeight="?actionBarSize"
        app:qrcv_topOffset="@dimen/dp_50" />

    <CheckBox
        android:id="@+id/cb_flash"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_marginBottom="@dimen/dp_80"
        android:background="@drawable/flash_selector"
        android:button="@null"
        app:layout_anchor="@+id/zxingview"
        app:layout_anchorGravity="bottom|center" />
</android.support.design.widget.CoordinatorLayout>
