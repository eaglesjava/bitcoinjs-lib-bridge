<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitbill.www.ui.main.receive.BtcReceiveFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.bitbill.www.ui.main.receive.ReceiveFragment">

        <include
            layout="@layout/layout_tabs_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.bitbill.www.common.widget.NoScrollViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.bitbill.www.common.widget.NoScrollViewPager>


    </LinearLayout>

    <com.bitbill.www.common.widget.SelectWalletView
        android:id="@+id/wv_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</FrameLayout>
