<resources>
    <declare-styleable name="PwdStatusView">
        <attr name="defaultColor" format="color" />
        <attr name="dangerousColor" format="color" />
        <attr name="weakColor" format="color" />
        <attr name="strongColor" format="color" />
        <attr name="statusItemWidth" format="dimension" />
        <attr name="statusItemHeight" format="dimension" />
        <attr name="statusItemGap" format="dimension" />
        <attr name="statusStrong" format="enum">
            <enum name="danger" value="0" />
            <enum name="weak" value="1" />
            <enum name="normal" value="2" />
            <enum name="strong" value="3" />
        </attr>
    </declare-styleable>
</resources>
