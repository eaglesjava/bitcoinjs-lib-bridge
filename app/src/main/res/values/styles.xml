<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white_60</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowBackground">@color/dark_bg</item>
    </style>

    <style name="AppTheme.PopupBottom" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/PopupBottomAnimation</item>
    </style>

    <style name="PopupBottomAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="AppTheme.Blue" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_blue</item>
    </style>

    <style name="AppTheme.ConfrimEditText" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/line</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="TabView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--<item name="elevation">0dp</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">

        <item name="actionMenuTextAppearance">@style/ToolbarMenuTextSize</item>
    </style>
    <!-- toolbar菜单文字尺寸 -->
    <style name="ToolbarMenuTextSize" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CommonButton" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Blue" parent="CommonButton">
        <item name="android:background">@drawable/btn_blue_corner</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Transparent" parent="CommonButton">
        <item name="android:background">@drawable/btn_transparent_corner</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Transparent.Corner.White" parent="CommonButton">
        <item name="android:background">@drawable/btn_transparent_white_corner</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Transparent.White60" parent="Button.Transparent">

        <item name="android:textColor">@color/white_60</item>
    </style>

    <style name="Button.White" parent="CommonButton">
        <item name="android:textColor">@color/btn_blue_text</item>
        <item name="android:background">@drawable/btn_white_corner</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText.Normal" parent="EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_40</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:background">@drawable/et_underline_selector</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="EditText.Wapper" parent="EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_40</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">sans-serif</item>

    </style>

    <style name="EditText.Mnemonic" parent="EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/input_mnemonic</item>
        <item name="android:textColorHint">@color/white_40</item>
        <item name="android:background">@drawable/bg_input_mnemonic</item>
        <item name="android:gravity">left</item>
        <item name="android:minLines">3</item>
        <item name="android:padding">25dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="EditText.Mnemonic.Noneditable" parent="EditText.Mnemonic">
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="EditText.Black" parent="EditText.Normal">
        <item name="android:textColorHint">@color/black_50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditText.ConfirmPwd" parent="EditText.Normal">
        <item name="android:textColorHint">@color/black_50</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditText.Amount" parent="EditText">
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">60sp</item>
        <item name="android:inputType">number|numberDecimal</item>
        <item name="android:background">@color/transparent</item>

    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Text.White" parent="Text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Black" parent="Text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.White.Big" parent="Text">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Black.Big" parent="Text">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/black_90</item>
    </style>

    <style name="Text.White.Action" parent="Text.White">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Blue">
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Title.Small" parent="Text.Title">
        <item name="android:textSize">@dimen/title_small</item>

    </style>

    <style name="Text.Title.Big" parent="Text.Title">
        <item name="android:textSize">@dimen/title_guide</item>
    </style>

    <style name="Text.InputTitle" parent="Text">
        <item name="android:textSize">@dimen/input_title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title.Content" parent="Text.Title">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textSize">@dimen/title_tiny</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Title.Confirm" parent="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white_80</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textSize">37sp</item>
        <item name="android:textColor">@color/white_60</item>
    </style>

    <style name="Text.InputHint" parent="Text">
        <item name="android:textSize">@dimen/input_mnemonic</item>
        <item name="android:textColor">@color/white_60</item>
    </style>

    <style name="Text.Small" parent="Text">
        <item name="android:textSize">@dimen/input_title_text_size</item>
    </style>

    <style name="Text.Small.White" parent="Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Small.Green" parent="Text.Small">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Text.Mnemonic" parent="Text">
        <item name="android:textColor">@color/text_mnemonic_color</item>
        <item name="android:textSize">@dimen/input_mnemonic</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Text.Mnemonic.Confirm" parent="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/input_mnemonic</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Text.Crypto" parent="Text.Title.Content">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Asset" parent="Text.Title.Content">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Wallet" parent="Text"></style>

    <style name="Text.Wallet.Logo" parent="Text.Wallet">
        <item name="android:background">@drawable/bg_white_circle</item>
        <item name="android:textSize">@dimen/title_small</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Wallet.Name" parent="Text.Wallet">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Wallet.Amount" parent="Text.Wallet">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Wallet.Amount.Big" parent="Text.Wallet.Amount">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Wallet.Menu" parent="Text.Wallet">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/wallet_menu_text</item>
        <item name="android:background">@drawable/bg_wallet_menu</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>

    </style>

    <style name="Text.Contact.Logo" parent="Text">
        <item name="android:background">@drawable/bg_white_circle</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#3E7EC2</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Contact.Logo.Big" parent="Text">
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/bg_white_circle</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#3F80C3</item>
    </style>

    <style name="Text.Contact.Name" parent="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Contact.Name.Big" parent="Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="Text.Contact.Address" parent="Text">
        <item name="android:textColor">@color/white_60</item>
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="Text.Address" parent="Text.White">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Toast" parent="Text">
        <item name="android:background">@drawable/btn_white_corner</item>
        <item name="android:textColor">@color/toast</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="Text.Setting.White" parent="Text">
        <item name="android:textSize">@dimen/text_size_setting</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Setting.White60" parent="Text">
        <item name="android:textSize">@dimen/text_size_setting</item>
        <item name="android:textColor">@color/white_60</item>
    </style>

    <style name="Text.Setting.Red" parent="Text">
        <item name="android:textSize">@dimen/text_size_setting</item>
        <item name="android:textColor">@color/red_backup</item>
    </style>

    <style name="TransparentDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ExpandedBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <style name="ConfirmDialog"></style>

    <style name="ConfirmDialog.Button" parent="Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ConfirmDialog.Button.Negative" parent="ConfirmDialog.Button">
        <item name="android:textColor">@color/black_40</item>
    </style>

    <style name="ConfirmDialog.Button.Positive" parent="ConfirmDialog.Button">
        <item name="android:textColor">@color/blue_active</item>
    </style>

    <style name="ConfirmDialog.Title" parent="Text.Title">
        <item name="android:textColor">@color/black_90</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ConfirmDialog.Message" parent="Text.Small">
        <item name="android:textColor">@color/black_40</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/line_30</item>
    </style>

    <style name="Line.Horizontal" parent="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="Line.Vertical" parent="Line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="GridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GridView.Mnemonic" parent="GridView">
        <item name="android:background">@drawable/bg_input_mnemonic_normal</item>
        <item name="android:columnWidth">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">5dp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:padding">25dp</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">5dp</item>
        <item name="android:listSelector">@color/transparent</item>
    </style>

    <style name="GridView.Mnemonic.Noneditable" parent="GridView.Mnemonic">
        <item name="android:clickable">false</item>
    </style>

    <style name="PopupAnimation" parent="Animation.AppCompat.Dialog">

        <!-- PopupWindow左右弹出的效果 -->
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DialogWalletSelect">
        <item name="android:windowEnterAnimation">@anim/slide_top</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>

    <style name="RecyclerView">
        <item name="android:overScrollMode">never</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Content" parent="Text.White">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Content.Title" parent="Text.White">

    </style>

    <style name="Content.Title.White80" parent="Text">
        <item name="android:textColor">@color/white_80</item>
    </style>

    <style name="CheckButton">
        <item name="android:button">@drawable/cb_wallet_select</item>
        <item name="android:checked">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Switch">
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:track">@drawable/track</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
