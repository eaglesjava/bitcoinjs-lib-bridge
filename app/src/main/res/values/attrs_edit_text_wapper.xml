<resources>
    <declare-styleable name="EditTextWapper">
        <attr name="inputTitle" format="string"/>
        <attr name="inputHint" format="string"/>
        <attr name="inputPadding" format="dimension"/>
        <attr name="inputPaddingLeft" format="dimension"/>
        <attr name="inputPaddingTop" format="dimension"/>
        <attr name="inputPaddingRight" format="dimension"/>
        <attr name="inputPaddingBottom" format="dimension"/>
        <attr name="maxLines" format="integer"/>
        <attr name="rightDrawable" format="reference"/>
        <attr name="inputType" format="enum">
            <enum name="inputText" value="0">0</enum>
            <enum name="inputPasswordVisible" value="1"/>
            <enum name="inputPasswordHide" value="2"/>
            <enum name="inputNumber" value="3"/>
        </attr>

    </declare-styleable>
</resources>
